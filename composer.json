{
    "name": "perimeterit/scitalk",
    "description": "Video talks base project from Perimeter Institute",
    "type": "drupal-custom-profile",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
	{
        "type": "composer",
        "url": "https://asset-packagist.org"
       }
    ],
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal/admin_toolbar": "^3.0",
        "drupal/backup_migrate": "^4.1",
        "drupal/better_exposed_filters": "^5.0@beta",
        "drupal/config_ignore": "^2.3",
        "drupal/console": "^1.0.2",
        "drupal/consumers": "^1.10",
        "drupal/copyright_block": "^1.0@RC",
        "drupal/core": "^8.8.0",
        "drupal/core-composer-scaffold": "^8.8",
        "drupal/date_all_day": "1.x-dev",
        "drupal/date_popup": "^1.1",
        "drupal/devel": "^4.0",
        "drupal/embed": "^1.3",
        "drupal/entity_embed": "^1.1",
        "drupal/features": "^3.8",
        "drupal/feeds": "^3.0@alpha",
        "drupal/feeds_ex": "^1.0@alpha",
        "drupal/feeds_tamper": "^2.0@beta",
        "drupal/fences": "^2.0",
        "drupal/field_group": "^3.0",
        "drupal/google_analytics": "^2.5",
        "drupal/group": "^1.3",
        "drupal/inline_entity_form": "^1.0",
        "drupal/jsonapi_extras": "^3.14",
        "drupal/libraries": "^3.0",
        "drupal/module_filter": "^3.1",
        "drupal/pathauto": "^1.6",
        "drupal/recaptcha": "^2.4",
        "drupal/recaptcha_v3": "^1.4",
        "drupal/restui": "^1.18",
        "drupal/search_api": "^1.15",
        "drupal/search_api_solr": "^4.0",
        "drupal/simple_oauth": "^4.3",
        "drupal/twig_tweak": "2.x-dev",
        "drupal/views_ajax_history": "^1.6",
        "drush/drush": "^9.3",
        "kint-php/kint": "^3.3",
        "npm-asset/history.js": "^1.8",
        "oomphinc/composer-installers-extender": "^2.0",
        "symfony/event-dispatcher": "4.3.11 as 3.4.35",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "drupal/core-dev": "^8.8.0",
        "symfony/debug": "^3.4"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "vendor-dir": "./vendor",
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "cweagans/composer-patches": true,
            "drupal/console-extend-plugin": true,
            "drupal/core-composer-scaffold": true,
            "oomphinc/composer-installers-extender": true
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php",
            "profiles/composer/ScitalkHandler.php"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "Scitalk\\composer\\ScriptHandler::moveProfile"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "Scitalk\\composer\\ScriptHandler::moveProfile"
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": [
               "type:drupal-library",
               "type:bower-asset",
               "type:npm-asset"
            ],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/profiles/scitalk": ["perimeterit/scitalk"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
          },
          "installer-types": [
              "bower-asset",
              "npm-asset",
              "drupal-library"
          ],
        "enable-patching": true,
        "patches": {
                "drupal/core": {
                        "fix aliased fields contraints validation issues when using JSON API Extras": "https://raw.githubusercontent.com/perimeterit/scitalk/f6ed0b64fe78903c40009be5e2712eeb5ad18067/patches/fix-aliased-fields-constraint-validations-3059720-9.patch",
                        "fix for jsonapi": "https://www.drupal.org/files/issues/2021-09-17/2996114-201.patch",
                        "patch to support bundle computed field in Layout builder": "https://www.drupal.org/files/issues/2019-02-22/layoutbuilder-bundlecomputedfieldsfix-3034979-1-8.7x.patch"
                },
                "drupal/twig_tweak": {
                  "TypeError on drupalBlock twig extension" : "https://www.drupal.org/files/issues/2020-01-23/typerror_drupalblock_3108210.patch"
                },
                "drupal/better_exposed_filters": {
                  "Fatal error: [] operator not supported for strings when option 'Allow multiple selections' is enabled": "https://www.drupal.org/files/issues/2022-02-17/bef_multiple_selection-2870296-7.patch"
                }
        }
    }
}
