{#
/**
 * @file
 * Custom theme implementation to display a speaker node in speaker name + institution view mode
 *
 * @ingroup themeable
 */
#}

{%
  set classes = [
    'node',
    node.bundle|clean_class,
    view_mode ? view_mode|clean_class,
  ]
%}

<div{{ attributes.addClass(classes) }}>
  <a href="{{ url }}" rel="bookmark">{{- label['#items'].0.value -}}</a>
  {{ content }}
</div>
